pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          def imageTag = "hardip1520/jenkins-sample:${env.BUILD_ID}"
          docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            def dockerImage = docker.build(imageTag, '.')
            dockerImage.push()
          }
        }
      }
    }

    stage('Pull and Run Docker Image') {
      steps {
        script {
          def imageTag = "hardip1520/jenkins-sample:${env.BUILD_ID}"
          docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            docker.image(imageTag).pull()
            docker.image(imageTag).run('-p 8080:8080 -d')
          }
        }
      }
    }
  }
}
