pipeline {
  agent {
    label 'docker'
  }
  
  environment {
    DOCKER_HUB_USERNAME = credentials('4d14794d-3b77-4460-af75-34f19de08dee').username
    DOCKER_HUB_PASSWORD = credentials('4d14794d-3b77-4460-af75-34f19de08dee').password
  }
  
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Maven Project') {
      steps {
        sh 'mvn clean package'
      }
    }
    
    stage('Docker Build') {
      steps {
        sh 'docker build -t hardip1520/jenkins-sample .'
      }
    }
    
    stage('Docker Login') {
      steps {
        sh 'docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD'
      }
    }
    
    stage('Docker Push') {
      steps {
        sh 'docker push hardip1520/jenkins-sample'
      }
    }
  }
}
