pipeline {

 agent any
  
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    
    stage('Docker Build') {
      steps {
        sh 'docker build -t hardip1520/jenkins-sample .'
      }
    }
    
    
    stage('Docker Push') {
      steps {
        sh 'docker push hardip1520/jenkins-sample'
      }
    }
  }
}
