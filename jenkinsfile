pipeline {
  agent {
    label 'docker'
  }
 
  
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Maven Project') {
      steps {
        sh 'mvn clean package'
      }
    }
    
    stage('Docker Build') {
      steps {
        sh 'docker build -t hardip1520/jenkins-sample .'
      }
    }
    
    
    stage('Docker Push') {
      steps {
        sh 'docker push hardip1520/jenkins-sample'
      }
    }
  }
}
