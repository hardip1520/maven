pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_HUB_USERNAME = credentials('docker-hub-credentials').username
        DOCKER_HUB_PASSWORD = credentials('docker-hub-credentials').password
      }
      steps {
        sh 'docker build -t hardip1520/jenkins-sample .'
        sh 'docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD'
        sh 'docker push hardip1520/jenkins-sample'
      }
    }

    stage('Pull and Run Docker Image') {
      steps {
        sh 'docker pull hardip1520/jenkins-sample'
        sh 'docker run -d -p 8080:8080 hardip1520/jenkins-sample'
      }
    }
  }
}
